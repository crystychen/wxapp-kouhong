page {
    background: #f5f5f5;
}

.between {
    background: #fff;
    padding: 16rpx 4%;
    border-bottom: 2rpx solid #f3f3f3;
    font-size: 28rpx;
    color: #5e5e5e;
}

.left {
    height: 80rpx;
}

.left image {
    width: 80rpx;
    height: 80rpx;
    background: green;
    border-radius: 50%;
    margin-right: 20rpx;
}

.column {
    height: 80rpx;
}

.column>view:nth-child(1) {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300rpx;
}

.column>view:nth-child(2) {
    color: #aaa;
    font-size: 24rpx;
}